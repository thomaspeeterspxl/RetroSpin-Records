 <div class="main-products">
     <h2>{{ productitem.producttitle}}</h2>
     {% set ProductImage = productitem.productimage.one()%}
     {% if ProductImage %}
         <img src="{{ ProductImage.url }}" class="main-products-foto">
     {% endif %}
     <p class="main-products-tekst">{{ productitem.productdescription }}</p>
          <p class="main-products-prijs">Price:  {{ productitem.productprijs | money }}</p>
